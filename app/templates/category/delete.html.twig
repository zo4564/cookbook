{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.category_delete'|trans({'%id%': category.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.category_delete'|trans({'%id%': category.id|default('')}) }}</h1>
    <h2 class="text-danger">Deleting a category will automatically delete all recipes related to it!</h2>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.delete'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a type="button" class="btn btn-primary" href="{{ url('category_index') }}" class="btn btn-link">
            {{ 'action.back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}