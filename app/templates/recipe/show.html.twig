{% extends 'base.html.twig' %}
{% block title %}
    {{ 'title.recipe_details'|trans({'%id%': recipe.id|default('')}) }}
{% endblock %}

{% block body %}

    {# WYSWIETLENIE PRZEPISU #}
    <h1>{{ 'title.recipe_details'|trans({'%id%': recipe.id|default('')}) }}</h1>
    {% if recipe is defined and recipe|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ recipe.id }}</dd>
            <dt>{{ 'label.title'|trans }}</dt>
            <dd>{{  recipe.title }}</dd>
            <dt>{{ 'label.content'|trans }}</dt>
            <dd>{{  recipe.content }}</dd>
            <dt>{{ 'label.category'|trans }}</dt>
            <dd>{{  recipe.category.name }}</dd>
        </dl>
        <p>
            <a href="{{ url('recipe_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>

    {# KOMENTARZE #}
        <h3>{{ 'title.comment_list'|trans }}</h3>
        {% if pagination is defined and pagination.items|length %}

            <div class="navigation text-center">
                {{ knp_pagination_render(pagination) }}
            </div>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>{{ knp_pagination_sortable(pagination, 'label.user'|trans, 'comment.user.name') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'label.content'|trans, 'comment.content') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'label.created_at'|trans, 'comment.created_at') }}</th>

                </tr>
                </thead>
                <tbody>
                {% for comment in pagination.items %}
                    <tr>
                        {% if comment.user.id is defined %}
                            <td><a href="{{ url('user_show', {id: comment.user.id}) }}" name="{{ 'action.show'|trans }}">
                                    {{ comment.user.name }}
                                </a></td>
                        {% else %} <td> null </td>
                        {% endif %}
                        <td>{{ comment.content }}</td>
                        <td>{{ comment.createdAt|date('Y/m/d')  }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="navigation text-center">
                {{ knp_pagination_render(pagination) }}
            </div>
        {# DODAJ KOMENTARZ #}
            <p>
                <a href="{{ url('comment_create') }}" title="{{ 'action.add_comment'|trans }}">
                    {{ 'action.add_comment'|trans }}
                </a>
            </p>

        {% else %}
            <p>
                {{ 'message.empty_list'|trans }}
            </p>
        {% endif %}

    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}